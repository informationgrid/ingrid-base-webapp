  <!-- ==================== Build Configuration ==================== -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.groovy.maven</groupId>
        <artifactId>gmaven-plugin</artifactId>
        <version>1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>execute</goal>
            </goals>
            <configuration>
              <source>ant.zip(destfile: "target/${project.name}-res.zip") {
                fileSet(dir: 'src/main/webapp') {
                  exclude(name: '**/*.xml')
                }
              }
              ant.jar(destfile: "target/${project.name}.jar") {
                fileSet(dir: 'target/classes') {
                  exclude(name: '**/RedirectController.class')
                  exclude(name: '**/BasePlug.class')
                  exclude(name: '**/DefaultDataType.class')
                }
              }
              </source>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.3</version>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>target/${project.name}-res.zip</file>
                  <type>zip</type>
                  <classifier>res</classifier>
                </artifact>
                <artifact>
                  <file>target/${project.name}.jar</file>
                  <type>jar</type>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
